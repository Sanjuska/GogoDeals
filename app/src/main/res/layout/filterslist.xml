<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="250dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:weightSum="1"
    android:background="#648B79">

    <TextView
        android:text="My Profile"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/textView10"
        android:textSize="18sp"
        android:layout_weight="0.24"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:elevation="16dp"
        android:gravity="center" />


    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/toggleFood"
        android:textOff="NoFood"
        android:textOn="Food"
        android:onClick="onClickToggleFood"
        android:checked="true" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/toggleClothes"
        android:checked="true"
        android:onClick="onClickToggleClothes"
        android:textOff="NoClothes"
        android:textOn="Clothes" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="match_parent"
        android:id="@+id/toggleActiv"
        android:layout_weight="0.02"
        android:layout_height="40dp"
        android:checked="true"
        android:onClick="onClickToggleActiv"
        android:textOn="Activities"
        android:textOff="NoActivities" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:id="@+id/toggleStuff"
        android:checked="true"
        android:onClick="onClickToggleStuff"
        android:textOff="NoStuff"
        android:textOn="Stuff" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:id="@+id/toggleRandom"
        android:layout_weight="0.04"
        android:checked="true"
        android:onClick="onClickToggleRandom"
        android:textOff="NoRandom"
        android:textOn="Random" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:id="@+id/filterBackButton"
        android:layout_marginLeft="150dp"
        android:elevation="24dp"
        android:layout_height="wrap_content"
        android:onClick="filterBackButtonPressed"
        android:layout_gravity="end" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:id="@+id/testEr"
        android:layout_weight="0.11" />



</LinearLayout>