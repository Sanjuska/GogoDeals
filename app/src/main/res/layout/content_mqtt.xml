<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MqttModule.Mqtt"
    tools:showIn="@layout/activity_mqtt"
    android:scrollIndicators="bottom">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idSendMessage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:editable="true"
        android:hint="Send message on topic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/idGetMessage"
        android:layout_below="@+id/idButtonSend"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:layout_alignEnd="@+id/idButtonSend"
        android:layout_above="@+id/idBtnRefresh"
        android:maxLines = "10"
        android:scrollbars = "vertical"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/idButtonSend"
        android:layout_below="@+id/idSendMessage"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="41dp"
        android:onClick="publishButtonClicked" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:id="@+id/idBtnRefresh"
        android:onClick="subscribeButtonClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="80dp" />

</RelativeLayout>
